{
    "fonts_to_load" : [
        "icons/material-design-icons/iconfont/MaterialIcons-Regular.ttf"
    ],

    "types" : {
        "Computer" : ["Material Icons", "folder"],
        "Desktop"  : ["Material Icons", "folder"],
        "Trashcan" : ["Material Icons", "folder"],
        "Network"  : ["Material Icons", "folder"],
        "Drive"    : ["Material Icons", "folder"],
        "Folder"   : ["Material Icons", "folder"],
        "File"     : null
    },

    "patterns" : {
        "*.png" : ["Material Icons", "photo"],
        "*.svg" : ["Material Icons", "photo"],
        "*.xcf" : ["Material Icons", "photo"],
        "*.jpg" : ["Material Icons", "photo"],

        "*.md"        : ["Material Icons", "format_align_left"],
        "*.txt"       : ["Material Icons", "format_align_left"],
        "*.cfg"       : ["Material Icons", "format_align_left"],
        "*.log"       : ["Material Icons", "format_align_left"],
        "*.py"        : ["Material Icons", "format_align_left"],
        "*.mkd"       : ["Material Icons", "format_align_left"],
        "*.html"      : ["Material Icons", "format_align_left"],
        "*.css"       : ["Material Icons", "format_align_left"],
        "*.xml"       : ["Material Icons", "format_align_left"],
        "*.js"        : ["Material Icons", "format_align_left"],
        "*.json"      : ["Material Icons", "format_align_left"],

        ".gitignore"     : ["Material Icons", "format_align_left"],
        ".gitattributes" : ["Material Icons", "format_align_left"]
    },

    "file_default" : "icons/null.png"
}
